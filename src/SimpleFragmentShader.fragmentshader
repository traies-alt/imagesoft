	// 	color.rgb = c * vec3(1, 1, 1);
	// } else {
	// 	color.rgb = c * vec3(0, 0, 0);
	// }

	// Escalar
	// color = c * 0.2;

	// Umbral
	// if (c.r < 0.5){
	// 	color = c;
	// } else {
	// 	color = vec3(0, 0, 0);
